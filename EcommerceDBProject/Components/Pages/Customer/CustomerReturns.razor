@page "/customer-dashboard/{UserDetailId}/returns"
@layout CustomerLayout
@rendermode InteractiveServer
@using EcommerceDBProject.Components.Layout
@using Syncfusion.Blazor.Popups;
@using Syncfusion.Blazor.Buttons;

<style>
    ody {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background-color: #0a192f; /* Navy blue background */
    }

    .container {
        width: 90%;
        margin: 30px 20px 20px 30px;
        background-color: #fff;
        padding: 20px;
        border-radius: 20px;
        box-shadow: 0 0 20px rgba(223,214,214);
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px auto;
        background-color: #1a2939; /* Dark navy blue table background */
    }

        .table th,
        .table td {
            padding: 10px;
            text-align: left;
            color: #fff; /* White text color */
        }

    .table-light th {
        background-color: #30475e; /* Medium navy blue header background */
    }

    .table tbody tr:nth-child(even) {
        background-color: #2c3e50; /* Even row background color */
    }

    .table tbody tr:hover {
        background-color: #485c72; /* Hover row background color */
    }

    .SfButton {
        background-color: #1a2939; /* Dark navy blue button background */
        color: #fff; /* White text color */
        border: none;
        padding: 8px 12px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .SfButton:hover {
            background-color: #30475e; /* Medium navy blue button background on hover */
        }

        .SfButton:disabled {
            background-color: #30475e; /* Medium navy blue for disabled button */
            cursor: not-allowed;
        }
</style>
<div class="container">
    <div class="col-12 text-center">
        <h1 style="color:#1a2939;font-weight:bold;font-family:Arial, Helvetica, sans-serif">Your Orders</h1>
    </div>
    <div class="col-12">
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th scope="col">Order ID</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Seller Name</th>
                    <th scope="col">Order Date</th>
                    <th scope="col">Return Date</th>
                    <th scope="col">Return Status</th>
                    <th scope="col">Return Reasons</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var returns in CustomerReturnsList)
                {
                    <tr>
                        <th scope="row">@returns.OrderId</th>
                        <td>@returns.InventoryItemName</td>
                        <td>@returns.SellerName</td>
                        <td>@returns.OrderDate</td>
                        <td>@returns.ReturnDate</td>
                        <td>@returns.ReturnStatus</td>
                        <td>@returns.ReturnReason</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
