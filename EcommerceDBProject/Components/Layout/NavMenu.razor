@code {
    // Inject the NavigationManager to access the URL
    [Inject]
    private NavigationManager NavigationManager { get; set; }

    private string CurrentUrl { get; set; }

    protected override void OnInitialized()
    {
        // Get the current URL
        CurrentUrl = NavigationManager.Uri;
    }
}

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="@($"{CurrentUrl}")">EcommerceDBProject</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@($"{CurrentUrl}")" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Dashboard
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@($"{CurrentUrl}/orders")">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> My Orders
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@($"{CurrentUrl}/returns")">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> My Returns
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@($"{CurrentUrl}/weather")">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> My Reviews
            </NavLink>
        </div>
    </nav>
</div>
